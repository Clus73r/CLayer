{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/std:c++20",
				"/Fe:",
				"${workspaceFolder}\\bin\\CLayer.exe",
				"..\\src\\**.cpp"
			],
			"options": {
				"cwd": "${workspaceFolder}\\intermediate"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}